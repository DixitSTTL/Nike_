<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nike" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.Nike" parent="Base.Theme.Nike" />


    <style name="splashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_main_logo</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item> <!--Transparent StatusBar-->
        <item name="android:windowTranslucentNavigation">true</item> <!--Transparent Navigation-->
        <item name="postSplashScreenTheme">@style/Theme.Nike</item> <!--Transparent Navigation-->
        <item name="windowSplashScreenAnimationDuration" tools:targetApi="s">5000</item> <!--Transparent Navigation-->
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">5000</item> <!--Transparent Navigation-->
    </style>


    <style name="CustomToolbarTextAppearance">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>